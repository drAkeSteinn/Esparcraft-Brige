# Configuración para compatibilidad con Windows

# Usar scripts de shell compatibles con Windows
script-shell=cmd.exe

# Cache de npm en Windows
cache=%APPDATA%\npm-cache

# Prefijo de instalación en Windows
prefix=%APPDATA%\npm

# Configuración para paquetes nativos
# node-gyp se compila correctamente en Windows

# Ignorar scripts opcionales que puedan fallar en Windows
ignore-scripts=false

# Guardar exactamente las versiones para reproducibilidad
save-exact=true

# Usar configuración segura
strict-peer-deps=false

# Configuración de registry (usar el default)
registry=https://registry.npmjs.org/
